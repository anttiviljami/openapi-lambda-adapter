{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "rootDir": "src/",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}